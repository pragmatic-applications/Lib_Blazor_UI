<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Version>0.0.0.2</Version>
        <RepositoryUrl>https://github.com/pragmatic-applications/Lib_Blazor_UI</RepositoryUrl>
        <Authors>Maurice Antonio Kelly @MAKMaurice</Authors>
        <Company>Pragmatic Applications</Company>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Description>A .NET 5.0 (Blazor) Razor Class Library</Description>
        <PackageReleaseNotes>A .NET 5.0 (Blazor) Razor Class Library</PackageReleaseNotes>
        <PackageTags>.NET 5.0 (Blazor) Razor Class Library</PackageTags>
        <RepositoryType>A .NET 5.0 (Blazor) Razor Class Library</RepositoryType>
        <Copyright>Pragmatic Applications - Maurice Antonio Kelly @MAKMaurice</Copyright>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Lib_Core_Interface" Version="1.0.0" />
      <PackageReference Include="Lib_Http_Feature" Version="0.0.0.1" />
      <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="5.0.8" />
      <PackageReference Include="Microsoft.AspNetCore.Components.Web.Extensions" Version="5.0.0-preview9.20513.1" />
      <PackageReference Include="Microsoft.AspNetCore.Http.Features" Version="5.0.8" />
      <PackageReference Include="System.Net.Http.Json" Version="5.0.0" />
    </ItemGroup>

    <ItemGroup>
        <SupportedPlatform Include="browser" />
    </ItemGroup>

