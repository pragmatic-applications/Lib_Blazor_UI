@inherits Component

<main>
    <p id="ToggleSidebar" class="ModalMenuButtonContainer toggle-btn LARGE" @onclick="MenuState.ToggleNavMenu">
        <button class="NavigationMenuButton">
            <span class="icon-bar A"></span>
            <span class="icon-bar A"></span>
            <span class="icon-bar A"></span>
        </button>
    </p>

    <HomeButton />

    <div id="sidebar" class="sidebar_container sidebar @MenuState.SidebarCss" role="navigation" @onclick="MenuState.ToggleNavMenu">

        @for(int i = 0; i < this.NavLinks.Count(); i++)
        {
            var count = i;

            <div class="nav_link">
                <NavLink href="@this.NavLinks[count].Route" class="nav-link NavLink">
                    @this.NavLinks[count].Link
                </NavLink>
            </div>
        }

    </div>

    <div class="@MenuState.MenuMainCSS">
        <div>@this.ChildContent</div>
    </div>

</main>
